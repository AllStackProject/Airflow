# ~/volumes/pvc/hdd-airflow-logs.yaml
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: pvc-hdd-airflow-logs
  namespace: airflow
spec:
  accessModes:
    - ReadWriteMany
  storageClassName: ""
  resources:
    requests:
      storage: 20G
---
